<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!--    qas collapsed-->
    <Transition
        motion:constraintSetEnd="@id/qas_expanded"
        motion:constraintSetStart="@id/base_state"
        motion:motionInterpolator="bounce">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/search_qas"
            motion:touchAnchorSide="top"
            motion:touchRegionId="@+id/search_qas" />
    </Transition>

    <!--    qas expanded-->
    <Transition
        motion:constraintSetEnd="@id/base_state"
        motion:constraintSetStart="@id/qas_expanded"
        motion:motionInterpolator="bounce">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/search_qas"
            motion:touchAnchorSide="top"
            motion:touchRegionId="@+id/search_qas" />
    </Transition>

    <ConstraintSet android:id="@+id/base_state">
        <Constraint android:id="@id/header">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                motion:layout_constraintBottom_toTopOf="@id/trending_rv"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
        <Constraint android:id="@id/search_qas">
            <Layout
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/guideline_bottom" />
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="32dp" />
        </Constraint>
        <Constraint android:id="@id/trending_rv">
            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/qas_expanded">
        <Constraint android:id="@id/search_qas">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/guideline_mid" />
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint android:id="@id/header">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>
        <Constraint android:id="@id/trending_rv">
            <PropertySet android:alpha="0.2" />
        </Constraint>
    </ConstraintSet>

</MotionScene>