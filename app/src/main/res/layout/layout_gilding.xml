<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="submissionGildings"
            type="com.ducktapedapps.updoot.model.Gildings" />
    </data>

    <LinearLayout
        android:id="@+id/gilding_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/silver_award"
            gildingCount="@{submissionGildings.silver}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_silver_gilding_14dp" />

        <TextView
            android:id="@+id/gold_award"
            gildingCount="@{submissionGildings.gold}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:drawableStart="@drawable/ic_gold_gilding_14dp" />

        <TextView
            android:id="@+id/platinum_award"
            gildingCount="@{submissionGildings.platinum}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:drawableStart="@drawable/ic_platinum_gilding_14dp" />
    </LinearLayout>
</layout>